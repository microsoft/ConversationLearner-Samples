    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\app.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "runtimeArgs": [
                "--preserve-symlinks"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Azure",
            "address": "blissimplesample.azurewebsites.net",
            "port": 5858,
            "restart" : false,
            "sourceMaps": false, 
            "localRoot" : "${workspaceRoot}",
            "remoteRoot" : "D:\\home\\site\\wwwroot"
        }
    ]
}