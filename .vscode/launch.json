    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch BLIS Demo",
            "program": "${workspaceFolder}\\lib\\app.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch BLIS UI",
            "program": "${workspaceFolder}\\lib\\ui.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "env": {
                "BLIS_UI_PORT": "5050"
            }
        }
    ]
}